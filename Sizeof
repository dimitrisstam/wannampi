#include <stdio.h>

int main()
{
 int n;
 char c;
 float f;
 printf("Enter an integer, a character and a real numder\n");
 scanf("%d %c %f",&n,&c,&f);
 sizeof(n,c,f);
 printf("Size of integer is:%d\n",sizeof(n));
 printf("Size of character is:%d\n",sizeof(c));
 printf("Size of real number is:%d\n",sizeof(f));
 return 0;
}
